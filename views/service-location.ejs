    {
      "@context": "https://schema.org",
      "@type": "LocalBusiness",
      "name": "Spa Doctors - <%= location.name %>",
      "image": "https://www.spadoc.tech/images/logo.png",
      "description": "<%= location.description %>",
      "address": {
        "@type": "PostalAddress",
        "addressLocality": "<%= location.name %>",
        "addressRegion": "CO",
        "addressCountry": "US",
        "postalCode": "<%= location.zipCodes[0] %>"
      },
      "telephone": "(856) 266-7293",
      "email": "Doctor4Spas@gmail.com",
      "url": "https://www.spadoc.tech/<%= location.slug %>",
      "areaServed": {
        "@type": "City",
        "name": "<%= location.name %>",
        "addressRegion": "CO"
      },
      "priceRange": "$$",
      "openingHours": "Mo-Su 08:00-18:00",
      "serviceType": [
        "Hot Tub Repair",
        "Spa Maintenance", 
        "Hot Tub Transport",
        "Hot Tub Cleaning"
      ],
      "aggregateRating": {
        "@type": "AggregateRating",
        "ratingValue": "5",
        "ratingCount": "5"
      }
    }
    </script>
    
    <link rel="stylesheet" href="/css/style.css">
    <script src="/js/analytics.js"></script>
</head>
<body>
    <header>
