        // Photo Carousel Functionality
        let currentPhotoSlide = 0;
        const totalPhotoSlides = 4;
        let photoAutoSlideInterval;

        function updatePhotoCarousel() {
            const photoTrack = document.querySelector('.photo-carousel-track');
            const photoDots = document.querySelectorAll('.photo-dot');
            
            // Move the carousel
            photoTrack.style.transform = `translateX(-${currentPhotoSlide * 100}%)`;
            
            // Update dots
            photoDots.forEach((dot, index) => {
                if (index === currentPhotoSlide) {
                    dot.style.background = '#2563eb';
                    dot.classList.add('active');
                } else {
                    dot.style.background = '#cbd5e1';
                    dot.classList.remove('active');
                }
            });
        }

        function nextPhotoSlide() {
            currentPhotoSlide = (currentPhotoSlide + 1) % totalPhotoSlides;
            updatePhotoCarousel();
        }

        function prevPhotoSlide() {
            currentPhotoSlide = (currentPhotoSlide - 1 + totalPhotoSlides) % totalPhotoSlides;
            updatePhotoCarousel();
        }

        function goToPhotoSlide(slideIndex) {
            currentPhotoSlide = slideIndex;
            updatePhotoCarousel();
        }

        function startPhotoAutoSlide() {
            photoAutoSlideInterval = setInterval(nextPhotoSlide, 6000); // Auto-advance every 6 seconds
        }

        function stopPhotoAutoSlide() {
            clearInterval(photoAutoSlideInterval);
        }

        // Reviews Carousel Functionality
        let currentSlide = 0;
        const totalSlides = 5;
        let autoSlideInterval;

        function updateCarousel() {
            const track = document.querySelector('.carousel-track');
            const dots = document.querySelectorAll('.dot');
            
            // Move the carousel
            track.style.transform = `translateX(-${currentSlide * 100}%)`;
            
            // Update dots
            dots.forEach((dot, index) => {
                if (index === currentSlide) {
                    dot.style.background = '#2563eb';
                    dot.classList.add('active');
                } else {
                    dot.style.background = '#cbd5e1';
                    dot.classList.remove('active');
                }
            });
        }

        function nextSlide() {
            currentSlide = (currentSlide + 1) % totalSlides;
            updateCarousel();
        }

        function prevSlide() {
            currentSlide = (currentSlide - 1 + totalSlides) % totalSlides;
            updateCarousel();
        }

        function goToSlide(slideIndex) {
            currentSlide = slideIndex;
            updateCarousel();
        }

        function startAutoSlide() {
            autoSlideInterval = setInterval(nextSlide, 8000); // Auto-advance every 8 seconds
        }

        function stopAutoSlide() {
            clearInterval(autoSlideInterval);
        }

        // Initialize carousels when page loads
        document.addEventListener('DOMContentLoaded', function() {
            // Photo Carousel Event Listeners
            document.querySelector('.photo-carousel-next').addEventListener('click', function() {
                nextPhotoSlide();
                stopPhotoAutoSlide();
                setTimeout(startPhotoAutoSlide, 1000); // Restart auto-slide after 1 second
            });

            document.querySelector('.photo-carousel-prev').addEventListener('click', function() {
                prevPhotoSlide();
                stopPhotoAutoSlide();
                setTimeout(startPhotoAutoSlide, 1000); // Restart auto-slide after 1 second
            });

            // Add event listeners for photo dots
            document.querySelectorAll('.photo-dot').forEach((dot, index) => {
                dot.addEventListener('click', function() {
                    goToPhotoSlide(index);
                    stopPhotoAutoSlide();
                    setTimeout(startPhotoAutoSlide, 1000); // Restart auto-slide after 1 second
                });
            });

            // Add hover effects for photo arrows
            const photoArrows = document.querySelectorAll('.photo-carousel-prev, .photo-carousel-next');
            photoArrows.forEach(arrow => {
                arrow.addEventListener('mouseenter', function() {
                    this.style.background = 'rgba(37, 99, 235, 1)';
                    this.style.transform = 'translateY(-50%) scale(1.1)';
                });
                arrow.addEventListener('mouseleave', function() {
                    this.style.background = 'rgba(37, 99, 235, 0.9)';
                    this.style.transform = 'translateY(-50%) scale(1)';
                });
            });

            // Add hover effects for photo dots
            document.querySelectorAll('.photo-dot').forEach(dot => {
                dot.addEventListener('mouseenter', function() {
                    if (!this.classList.contains('active')) {
                        this.style.background = '#94a3b8';
